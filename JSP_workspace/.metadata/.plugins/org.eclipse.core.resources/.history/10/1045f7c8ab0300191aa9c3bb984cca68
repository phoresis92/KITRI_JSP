package com.young.dao;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;
import java.util.List;

import com.young.dto.MDto;

public class MDao {

	Connection con = null;
	PreparedStatement pstmt = null;
	ResultSet rs = null;
	ArrayList list = null;
	int result = 0 ;
	
	public MDao(){
		try {
		Class.forName("oracle.jdbc.OracleDriver");
		con = DriverManager.getConnection("jdbc:oracle:thin:@127.0.0.1:1521:xe", "hr", "hr");
		System.out.println("jdbc connection OK");
		}catch(ClassNotFoundException e) {
			e.printStackTrace();
		}catch(SQLException e) {
			e.printStackTrace();
		}
	} // constructor
	
	public int regi(String name, String birth, String gender, String phone) {
		
		try{
		
			con.setAutoCommit(false);
			
			
			
			String sql = "insert into memtest (fullname, birth, gender, phone) values (? , ? , ? , ?)";
			pstmt = con.prepareStatement(sql);
			pstmt.setString(1, name);
			pstmt.setString(2, birth);
			pstmt.setString(3, gender);
			pstmt.setInt(4, Integer.parseInt(phone));
			result = pstmt.executeUpdate();
			
			if(result == 0) System.out.println("register fail");
			if(result != 0) System.out.println("register success");
			
			
		}catch(SQLException e) {
			e.printStackTrace();
			try {
				con.rollback();
			} catch (SQLException ex) {
				ex.printStackTrace();
			}
		}finally {
			try {
				con.commit();
				con.setAutoCommit(true);
				pstmt.close();
				con.close();
			}catch(SQLException e) {
				e.printStackTrace();
			}
		}
		
		return result;
	} //regi method end
	
	public ArrayList<MDto> getMember(String phone) {
		
		
		
		try {
			
			String sql = "select fullname, birth, gender, phone from memtest where phone = ?";
			pstmt = con.prepareStatement(sql);
			pstmt.setInt(1, Integer.parseInt(phone));
			rs = pstmt.executeQuery();

			list = new ArrayList<MDto>();
			while(rs.next()) {
				
				MDto dto = new MDto(rs.getString(1), rs.getString(2), rs.getString(3), rs.getInt(4)+"");
				list.add(dto);
			}
			
			
			
		} catch (SQLException e) {
			e.printStackTrace();
		}finally {
			try {
				if(pstmt!=null) pstmt.close();
				if(con!=null) con.close();
			}catch(SQLException e) {
				e.printStackTrace();
			}
		}
		
		return (ArrayList<MDto>)list;
	} // getMember method end
	
}
